    <link rel="manifest" href="/manifest.webmanifest" />
    <link
      rel="alternate"
      type="application/rss+xml"
      title={t("title")}
      href={new URL(`${lang}/blog/feed.xml`, Astro.site)}
    />
    <HeadSEO {frontmatter} />
    <ClientRouter />
